<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="900.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.librarymanagement.SearchBookController">
    <ImageView fx:id="backgroundImageView" fitHeight="563.0" fitWidth="900.0" layoutY="29.0" preserveRatio="false">
        <image>
            <Image url="@../../../image/Back_ground_search.jpg" />
        </image>
    </ImageView>

    <TextField fx:id="searchField" layoutX="298.0" layoutY="35.0" prefHeight="32.0" prefWidth="306.0" promptText="Enter book title or keyword" />
    <Button layoutX="425.0" layoutY="73.0" onAction="#onSearchButtonClick" text="Search" />

    <TableView fx:id="bookTableView" layoutX="107.0" layoutY="111.0" prefHeight="400.0" prefWidth="687.0">
        <columns>
            <TableColumn fx:id="coverColumn" prefWidth="116.0" text="Cover" />
            <TableColumn fx:id="titleColumn" prefWidth="149.0" text="Title" />
            <TableColumn fx:id="authorColumn" prefWidth="119.0" text="Author" />
            <TableColumn fx:id="publisherColumn" prefWidth="110.0" text="Publisher" />
            <TableColumn fx:id="yearColumn" prefWidth="84.0" text="Year" />
            <TableColumn fx:id="categoryColumn" prefWidth="108.0" text="Category" />
        </columns>
    </TableView>
    <Button fx:id="AddDoc" layoutX="369.0" layoutY="522.0" mnemonicParsing="false" onAction="#ThemSach" prefHeight="41.0" prefWidth="163.0" text="Add documents">
        <font>
            <Font size="18.0" />
        </font>
    </Button>
   <Button fx:id="back" layoutX="14.0" layoutY="35.0" mnemonicParsing="false" onAction="#Back" prefHeight="41.0" prefWidth="52.0" style="-fx-background-color: black;">
      <graphic>
         <ImageView fitHeight="41.0" fitWidth="44.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@../../../image/back.jpg" />
            </image>
         </ImageView>
      </graphic></Button>
</AnchorPane>
