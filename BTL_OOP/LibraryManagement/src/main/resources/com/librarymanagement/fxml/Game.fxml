<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="768" prefWidth="1024" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.librarymanagement.GameController">
    <!-- Background -->
    <ImageView fitHeight="768" fitWidth="1106.0" layoutX="-79.0">
        <image>
            <Image url="@../../../image/ailatrieuphu.png" />
        </image>
    </ImageView>
    <!-- Question Section -->
    <VBox alignment="CENTER" layoutX="102.0" layoutY="105.0" prefHeight="200" prefWidth="824" spacing="20">
        <children>
            <Label fx:id="questionLabel" style="-fx-background-color: #00BFFF; -fx-text-fill: #FFFFFF; -fx-font-size: 18; -fx-padding: 20; -fx-border-radius: 10; -fx-background-radius: 10;" text="Câu hỏi sẽ hiển thị ở đây" wrapText="true" />
        </children>
    </VBox>
    <!-- Heart Images -->
    <HBox alignment="CENTER" layoutX="800" layoutY="20" spacing="10">
        <children>
            <ImageView fx:id="heart1" fitHeight="30" fitWidth="30" />
            <ImageView fx:id="heart2" fitHeight="30" fitWidth="30" />
            <ImageView fx:id="heart3" fitHeight="30" fitWidth="30" />
        </children>
    </HBox>
    <!-- Answer Section -->
    <VBox alignment="CENTER" layoutX="200" layoutY="350" spacing="15" />
    <!-- Status Section -->
    <VBox alignment="CENTER" layoutX="700" layoutY="50" spacing="10">
        <Label fx:id="correctAnswersLabel" style="-fx-font-size: 16; -fx-text-fill: #FFFFFF;" text="Câu trả lời đúng: 0" />
    </VBox>
    <!-- Buttons -->
    <HBox layoutX="400" layoutY="650" spacing="20" />
    <Button fx:id="option1Button" layoutX="532.0" layoutY="338.0" onAction="#handleAnswer1" style="-fx-font-size: 16; -fx-background-color: #FFD700; -fx-text-fill: #FFFFFF; -fx-padding: 10;" text="Câu trả lời 1" />
    <Button fx:id="option2Button" layoutX="347.0" layoutY="361.0" onAction="#handleAnswer2" style="-fx-font-size: 16; -fx-background-color: #FFD700; -fx-text-fill: #FFFFFF; -fx-padding: 10;" text="Câu trả lời 2" />
    <Button fx:id="option3Button" layoutX="347.0" layoutY="305.0" onAction="#handleAnswer3" style="-fx-font-size: 16; -fx-background-color: #FFD700; -fx-text-fill: #FFFFFF; -fx-padding: 10;" text="Câu trả lời 3" />
    <Button fx:id="startButton" layoutX="476.0" layoutY="454.0" onAction="#startGame" style="-fx-font-size: 16; -fx-background-color: #FF8000; -fx-text-fill: #FFFFFF;" text="Bắt đầu" />
    <Button fx:id="returnToMenuButton" layoutX="14.0" layoutY="32.0" onAction="#returnToMenu" style="-fx-font-size: 16; -fx-background-color: #FF8000; -fx-text-fill: #FFFFFF;" text="Quay về menu" />
</AnchorPane>
