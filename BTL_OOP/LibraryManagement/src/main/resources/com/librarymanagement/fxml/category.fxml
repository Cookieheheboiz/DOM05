<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitMenuButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="scenePane" prefHeight="900.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/23"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.librarymanagement.CategoryControler">


    <children>
        <ImageView fx:id="backgroundImageView" fitHeight="904.0" fitWidth="900.0" preserveRatio="false">
            <image>
                <Image url="@../../../image/253418_resized.jpg"/>
            </image>
        </ImageView>
        <SplitMenuButton fx:id="Category" layoutX="386.0" layoutY="21.0" onAction="#AddCategory" text="Category"/>
        <TableView fx:id="AddToTable" layoutX="273.0" layoutY="82.0" prefHeight="511.0" prefWidth="626.0">
            <columns>
                <TableColumn fx:id="AddTitle" prefWidth="228.7999267578125" text="Title"/>
                <TableColumn fx:id="AddAuthor" prefWidth="175.20010375976562" text="Author"/>
                <TableColumn fx:id="publisher" minWidth="0.0" prefWidth="131.99993896484375" text="Publish"/>
                <TableColumn fx:id="quantity" prefWidth="88.7999267578125" text="Quantity"/>
            </columns>
        </TableView>
        <Button fx:id="back" layoutX="14.0" layoutY="16.0" mnemonicParsing="false" onAction="#Back" prefHeight="35.0"
                prefWidth="46.0" style="-fx-background-color: black;">
            <graphic>
                <ImageView fitHeight="35.0" fitWidth="44.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../../../image/back.jpg"/>
                    </image>
                </ImageView>
            </graphic>
        </Button>
        <ImageView fitHeight="160.0" fitWidth="273.0" layoutY="172.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../../../image/pointonright.gif"/>
            </image>
        </ImageView>
        <Label fx:id="Sum" layoutX="40.0" layoutY="668.0" prefHeight="32.0" prefWidth="179.0"
               style="-fx-background-color: yellow;" text="Tổng số sách:  "/>
        <Button fx:id="Deletebook" layoutX="617.0" layoutY="666.0" mnemonicParsing="false" onAction="#deleteBook"
                prefHeight="32.0" prefWidth="103.0" text="Delete"/>
    </children>
</AnchorPane>
