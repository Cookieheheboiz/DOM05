<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="900.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.librarymanagement.ReturnController">
    <children>
        <!-- Thêm ảnh nền -->
        <ImageView fitHeight="900.0" fitWidth="900.0" preserveRatio="false">
            <image>
                <Image url="@../../../image/anime2.jpg" />
            </image>
        </ImageView>

        <!-- TableView để hiển thị thông tin sách đã mượn -->
        <TableView fx:id="borrowedBooksTable" layoutX="150.0" layoutY="123.0" prefHeight="600.0" prefWidth="600.0">
            <columns>
                <TableColumn fx:id="borrowDateColumn" prefWidth="200.0" text="Borrow Date" />
                <TableColumn fx:id="titleColumn" prefWidth="200.0" text="Title" />
                <TableColumn fx:id="returnDateColumn" prefWidth="200.0" text="Return Date" />
            </columns>
        </TableView>

        <!-- Nút trả sách -->
        <Button layoutX="420.0" layoutY="752.0" onAction="#returnSelectedBooks" text="Trả sách" />

        <!-- Nút quay lại -->
        <Button layoutX="33.0" layoutY="25.0" onAction="#goBackToMainView" text="Return" />
    </children>
</AnchorPane>
