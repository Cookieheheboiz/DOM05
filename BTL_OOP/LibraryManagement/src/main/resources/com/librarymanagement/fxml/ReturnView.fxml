    <children>
        <TableView fx:id="borrowedBooksTable" layoutX="130.0" layoutY="14.0" prefHeight="600.0" prefWidth="600.0">
            <columns>
                <TableColumn fx:id="titleColumn" prefWidth="200.0" text="Title" />
                <TableColumn fx:id="borrowDateColumn" prefWidth="200.0" text="Borrow Date" />
                <TableColumn fx:id="returnDateColumn" prefWidth="200.0" text="Return Date" />
            </columns>
        </TableView>
        <Button layoutX="400.0" layoutY="645.0" onAction="#returnSelectedBooks" text="Trả sách" />
        <Button layoutX="400.0" layoutY="700.0" onAction="#goBackToMainView" text="Quay lại" />
    </children>
</AnchorPane>
