<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="900.0" prefWidth="900.0" style="-fx-background-color: #F0E68C;" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.librarymanagement.borrowAndReturnController">
    <children>
        <TextField fx:id="txtBorrowerName" layoutX="169.0" layoutY="415.0" style="-fx-background-color: #F5F5DC;" />
        <ComboBox fx:id="comboBookName" layoutX="135.0" layoutY="183.0" prefHeight="26.0" prefWidth="212.0" style="-fx-background-color: #F5F5DC;" />
        <DatePicker fx:id="borrowDate" layoutX="6.0" layoutY="329.0" style="-fx-background-color: #F5F5DC;" />
        <DatePicker fx:id="returnDate" layoutX="234.0" layoutY="329.0" style="-fx-background-color: #F5F5DC;" />

        <Button fx:id="btnBorrow" layoutX="47.0" layoutY="467.0" mnemonicParsing="false" onAction="#handleBorrowBook" text="Mượn sách" />
        <Button fx:id="btnReturn" layoutX="246.0" layoutY="467.0" mnemonicParsing="false" onAction="#handleReturnBook" text="Trả sách" />
        <Button fx:id="btnReturnToMenu" text="Return to Menu" layoutX="10" layoutY="10" />

        <!-- Nút Back duy nhất -->
        <Button fx:id="btnBack" layoutX="447.0" layoutY="467.0" mnemonicParsing="false" onAction="#handleBack" text="Trở lại" />

        <TableView fx:id="borrowedBooksTable" layoutX="447.0" layoutY="82.0" prefHeight="536.0" prefWidth="338.0" style="-fx-background-color: #F5F5DC;">
            <columns>
                <TableColumn fx:id="bookIDColumn" prefWidth="75.0" text="ID" />
                <TableColumn fx:id="bookNameColumn" prefWidth="75.0" text="Tên sách" />
                <TableColumn fx:id="borrowerNameColumn" prefWidth="75.0" text="Người mượn" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>

        <Label layoutX="45.0" layoutY="187.0" text="Nhập tên sách:" textAlignment="CENTER" />
        <Label layoutX="62.0" layoutY="283.0" text="Ngày mượn" textAlignment="CENTER" />
        <Label layoutX="299.0" layoutY="283.0" text="Ngày trả" textAlignment="CENTER" />
        <Label layoutX="62.0" layoutY="419.0" text="Vui lòng nhập tên:" />
    </children>
</AnchorPane>
